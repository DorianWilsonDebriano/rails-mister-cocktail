<h3>The cocktails we have in stock</h3>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('assets/images/bar-photo.jpg')">
    <p>A good cocktail is always nice.</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-4 d-flex">
      <% @cocktails.each do |cocktail| %>
        <div class="container bg-white border rounded justify-content-center">
          <h3> <%= cocktail.name %> </h3>
          <% cocktail.ingredients.each do |ingredient|%>
          <li> <%= ingredient.name %> </li>
          <% end %>
          <%= link_to "see details", cocktail_path(cocktail), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
